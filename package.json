{
  "name": "precificacao",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node './src/app/(backend)/infra/scripts/post-dev.js'",
    "dev:run": "npm run services:up && npm run services:wait:database && npm run drizzle:push && next dev",
    "postdev": "npm run services:stop",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "services:up": "docker compose -f './src/app/(backend)/infra/compose.yaml' up -d",
    "services:down": "docker compose -f './src/app/(backend)/infra/compose.yaml' down",
    "services:stop": "docker compose -f './src/app/(backend)/infra/compose.yaml' stop",
    "services:wait:database": "node './src/app/(backend)/infra/scripts/wait-for-postgres.js'",
    "test": "jest",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "drizzle:generate": "npx drizzle-kit generate",
    "drizzle:migrate": "npx drizzle-kit migrate",
    "drizzle:push": "npx drizzle-kit push"
  },
  "dependencies": {
    "async-retry": "1.3.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "drizzle-orm": "0.41.0",
    "lucide-react": "^0.503.0",
    "next": "15.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3",
    "@tailwindcss/postcss": "4",
    "@types/async-retry": "1.4.9",
    "@types/jest": "29.5.14",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "concurrently": "9.1.2",
    "drizzle-kit": "0.30.6",
    "eslint": "9",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.6",
    "jest": "29.7.0",
    "tailwindcss": "4",
    "ts-jest": "29.3.2",
    "tsx": "4.19.3",
    "tw-animate-css": "^1.2.8",
    "typescript": "5"
  }
}
